@page "/adder"

<h3>Adder</h3>
<style>
   .btAdd {
       position: relative;
       left: 100px;
       height: 40px;
       width: 80px;
   }
using System.Reflection;
#line default
canvas {
       width: 300px;
       height: 300px;
       background-color: lightcyan;
       float: left;
       position: relative;
   }
</style>

<div class="canvas">
   <p> A:<input id="number1" @bind= A type="number"> </p>
   <p> B:<input id="number2" @bind= B type="number" /> </p>
   <p> <button @onclick="AddValues" class="btAdd"> @Label </button> </p>
   <p> C:<input id="number3" @bind= C type="number" /> </p>
</div>
@code {
   string Label = "Add";
   double A =0, B =0, C =0;
   
   private void AddValues()
   {
       C = A + B;
   }
}